<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project LDPartEditor_linux">
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">

    	<property name="os" value="linux"/> <!-- linux, win32, mac-->
    	<property name="arc" value="x86"/> <!-- x86, x64-->
    	<property name="src" value="linux"/> <!-- for 64-bit architecture append '_x64' here-->
    	<property name="ws" value="/home/nils/workspace"/>
    	<property name="eclipsePlugin" value="/home/nils/eclipse/plugins"/>

    	<!-- Copy resource files (shaders, PNGs, txt) -->
    	<copy file="${ws}/LDPartEditor_linux/cmap.png" overwrite="true" todir="${ws}/LDPartEditor/LDPartEditor_${os}_${arc}"/>
        <copy file="${ws}/LDPartEditor_linux/matte_metal.png" overwrite="true" todir="${ws}/LDPartEditor/LDPartEditor_${os}_${arc}"/>
        <copy file="${ws}/LDPartEditor_linux/metal.png" overwrite="true" todir="${ws}/LDPartEditor/LDPartEditor_${os}_${arc}"/>
        <copy file="${ws}/LDPartEditor_linux/categories.txt" overwrite="true" todir="${ws}/LDPartEditor/LDPartEditor_${os}_${arc}"/>
        <copy file="${ws}/LDPartEditor_linux/gloss.frag" overwrite="true" todir="${ws}/LDPartEditor/LDPartEditor_${os}_${arc}"/>
        <copy file="${ws}/LDPartEditor_linux/gloss.vert" overwrite="true" todir="${ws}/LDPartEditor/LDPartEditor_${os}_${arc}"/>
        <copy file="${ws}/LDPartEditor_linux/primitive_rules.txt" overwrite="true" todir="${ws}/LDPartEditor/LDPartEditor_${os}_${arc}"/>
    	<!-- Create JAR file -->
        <jar destfile="${ws}/LDPartEditor/LDPartEditor_${os}_${arc}/LDPartEditor.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="org.nschmidt.ldparteditor.main.LDPartEditor"/>
                <!-- Modified Classpath -->
            	<attribute name="Class-Path" value=". plugin/"/>
            </manifest>
        	<fileset dir="${ws}/LDPartEditor_${src}/bin"/>
        	<zipfileset excludes="META-INF/*.SF" src="${ws}/LDPartEditor_linux/lib/lwjgl_util.jar"/>
        	<zipfileset excludes="META-INF/*.SF" src="${ws}/LDPartEditor_linux/lib/lwjgl.jar"/>
        	<fileset dir="${ws}/org.eclipse.swt_${src}"/>
        	<zipfileset excludes="META-INF/*.SF" src="${ws}/org.eclipse.swt_${src}/swt.jar"/>
        	<fileset dir="${ws}/org.eclipse.jface/bin"/>
        	<zipfileset excludes="META-INF/*.SF" src="${ws}/jface/org.eclipse.core.commands_3.6.0.jar"/>
        	<zipfileset excludes="META-INF/*.SF" src="${ws}/jface/org.eclipse.equinox.common_3.6.0.jar"/>
        	<zipfileset excludes="META-INF/*.SF" src="${ws}/jface/org.eclipse.jface_3.5.0.jar"/>
        	<zipfileset excludes="META-INF/*.SF" src="${ws}/jface/org.eclipse.osgi_3.6.0.jar"/>
        	<zipfileset excludes="META-INF/*.SF" src="${ws}/jface/org.eclipse.ui.workbench_3.1.0.jar"/>
        	<fileset dir="${ws}/com.sun.tools/bin"/>
            <zipfileset excludes="META-INF/*.SF" src="${ws}/runtime_compiler/tools.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${ws}/LDPartEditor_linux/swt-grouplayout.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${ws}/LDPartEditor_linux/swing2swt.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${eclipsePlugin}/org.eclipse.core.databinding_1.4.1.v20130515-1857.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${eclipsePlugin}/org.eclipse.core.databinding.beans_1.2.200.v20130515-1857.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${eclipsePlugin}/org.eclipse.core.databinding.observable_1.4.1.v20130515-1857.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${eclipsePlugin}/org.eclipse.core.databinding.property_1.4.200.v20130515-1857.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${eclipsePlugin}/org.eclipse.jface.databinding_1.6.200.v20130515-1857.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${eclipsePlugin}/com.ibm.icu_50.1.1.v201304230130.jar"/>
        </jar>
    	<!-- Create update file -->
        <zip destfile="${ws}/LDPartEditor/Updater/${os}_${arc}/update.zip"
    	       basedir="${ws}/LDPartEditor/LDPartEditor_${os}_${arc}"
    	       excludes="plugin/**, natives/**, LDPartEditor.jar, cmap.png, matte_metal.png, metal.png, categories.txt, gloss.frag, gloss.vert, primitive_rules.txt"
        />
    	<!-- Create complete archive -->
    	<zip destfile="${ws}/LDPartEditor/binary/${os}_${arc}/LDPartEditor_${os}_${arc}.zip"
    	       basedir="${ws}/LDPartEditor/LDPartEditor_${os}_${arc}"
    	/>
    </target>
</project>
